---
import SwiperClient from "./js/SwiperClient.jsx"; // JS d'init
import PostCard from "./PostCard.astro";
import Arrow from "../assets/images/arrow.svg";
const { posts } = Astro.props;
---

<section class="ly swiper-actu">
  <div class="container-semi-r">
    <div class="grid">
      <div class="w-12 w-lg-3">
        <div class="titre">
          <h2>Derniers posts</h2>
        </div>
        <p>
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Fugit natus
          sequi vitae minima laboriosam! Veniam adipisci ullam, vitae similique
          soluta earum? Optio assumenda architecto praesentium magni pariatur
          amet accusamus numquam.
        </p>
        <div class="swiper-navigation">
          <Arrow width={64} height={64} class="prev" />
          <Arrow width={64} height={64} class="next" />
        </div>
      </div>
      <div class="w-12 w-lg-8 s-lg-5">
        <div class="swiper">
          <div class="swiper-wrapper">
            {posts.map((post) => <PostCard post={post} class="swiper-slide" />)}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<SwiperClient
  selector=".swiper-actu .swiper"
  selectorNavigation=".swiper-actu .swiper-navigation"
  debug={true}
  client:idle
/>
